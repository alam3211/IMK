<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivProfileHome"
            android:layout_width="63dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/tvUsernameHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aqua the Reviewman"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tvTitleHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrote a review about Alita : Battle Angle"
            android:textStyle="bold"
            android:textColor="@color/colorText"/>
        <TextView
            android:id="@+id/tvContentHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filmnya bagus, bagian dimana alita mendapatkan tubuh baru sangatlah (...)"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="4">

        <Button
            android:id="@+id/btnLoveHome"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_red_buttons"
            android:drawableStart="@drawable/ic_heart_18dp"
            android:paddingHorizontal="10dp"
            android:text="10.000"
            android:layout_marginVertical="3dp"
            android:textAlignment="center"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnReplyHome"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_grey_buttons"
            android:drawableStart="@drawable/ic_reply_black_18dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:text="Reply"
            android:textAlignment="center"
            android:textSize="10dp" />
    </LinearLayout>
</LinearLayout>