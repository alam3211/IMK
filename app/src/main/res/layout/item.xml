<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        android:layout_margin="8dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@drawable/alitaposter" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="#7A000000">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="16dp"
                android:numStars="5"
                android:layout_weight="10"
                android:rating="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4/5"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:textColor="#fff"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                >
                <TextView
                    android:id="@+id/tvCardRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star_white_18dp"

                    android:drawablePadding="6dp"
                    android:text="2468"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/rounded_brown_buttons"
                    android:layout_marginVertical="6dp"/>

                <TextView
                    android:id="@+id/tvCardWatched"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    android:drawablePadding="8dp"
                    android:paddingVertical="3dp"
                    android:drawableStart="@drawable/ic_remove_red_eye_black_18dp"
                    android:background="@drawable/rounded_black_buttons"
                    android:layout_marginVertical="6dp"
                    android:paddingHorizontal="6dp"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tvCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="28dp"
        android:layout_marginTop="16dp"
        android:text="Alita : Battle Angle"/>
</LinearLayout>